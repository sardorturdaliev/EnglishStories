<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1117"
    tools:context=".screens.aboutScreen.AboutFragment">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0F1A20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_bookname_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Akbar Birbal"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/img_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:contentDescription="d"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/minus1"
          />
        <ImageView
            android:id="@+id/imgplus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/add1"
            android:contentDescription="c"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
           />
    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_about_chapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:text="My backpack weighs 31 pounds, and it barely fit into the trunk of Jen and Steve’s Honda. I don’t think they believed I was actually going through with this until I called and asked for a ride up the mountain. Jen gave me that look, that pitying, tight-lipped smile, but she helped Steve and I load up my things, and then they bought me lunch before dropping me off at the trailhead. Jen cried, and Steve gave me a can of pepper spray and an awkward side hug."
                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>